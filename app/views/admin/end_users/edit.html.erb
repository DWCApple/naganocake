<div class="container">
  <div class="row">
    <h2 class="bg-light"><strong><%= @end_user.family_name %><%= @end_user.first_name %></strong>さんの会員情報編集</h2>
  </div>

    <%= form_with model: @end_user, url: admin_end_user_path(@end_user.id), method: :patch do |f| %>
    <table class="table text-left">
      <tr>
        <th>会員ID</th>
        <td><%= @end_user.id %></td>
      </tr>
      <tr>
        <th>氏名</th>
        <td><%= f.text_field :family_name %>  <%= f.text_field :first_name %></td>
      </tr>
      <tr>
        <th>フリガナ</th>
        <td><%= f.text_field :family_name_kana %>  <%= f.text_field :first_name_kana %></td>
      </tr>
      <tr>
        <th>郵便番号</th>
        <td><%= f.text_field :postal_code %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= f.text_field :address %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= f.text_field :telephone_number %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= f.text_field :email %></td>
      </tr>

      <tr>
        <th>会員ステータス</th>
        <td>
          <strong>

            <%= f.radio_button :is_deleted, "false" %>
            <%= f.label :is_deleted, "有効", value: false %>
      
            <%= f.radio_button :is_deleted, "true" %>
            <%= f.label :is_deleted, "退会",value: true %>

          </strong>
        </td>
      </tr>
    </table>
    <div class="form-group text-center">
      <%= f.submit "変更内容を保存する", class: "btn btn-success" %>
    </div>
    <% end %>

</div>

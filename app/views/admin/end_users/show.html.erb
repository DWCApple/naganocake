<div class="container">
  <div class="row">
    <h2 class="bg-light"><strong><%= @end_user.family_name %><%= @end_user.first_name %></strong>さんの詳細ページ</h2>
  </div>
  <table class="table text-left">
  <tr>
    <th>会員ID</th>
    <td><%= @end_user.id %></td>
  </tr>
  <tr>
    <th>氏名</th>
    <td><%= @end_user.family_name %>  <%= @end_user.first_name %></td>
  </tr>
  <tr>
    <th>フリガナ</th>
    <td><%= @end_user.family_name_kana %>  <%= @end_user.first_name_kana %></td>
  </tr>
  <tr>
    <th>郵便番号</th>
    <td><%= @end_user.postal_code %></td>
  </tr>
  <tr>
    <th>住所</th>
    <td><%= @end_user.address %></td>
  </tr>
  <tr>
    <th>電話番号</th>
    <td><%= @end_user.telephone_number %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= @end_user.email %></td>
  </tr>
  <tr>
    <th>会員ステータス</th>
    <td>
      <% if @end_user.is_deleted == false %>
        <strong class="text-success"><%= "有効" %></strong>
      <% else %>
        <strong class="text-secondary"><%= "退会" %></strong>
      <% end %>
    </td>
  </tr>
</table>
  <div class="form-group text-center">
    <%= link_to "編集する", edit_admin_end_user_path(@end_user.id), class: "btn btn-success" %>
    <%#= link_to "注文履歴一覧を見る", order_items_path, class: "btn btn-primary" %>
  </div>
</div>
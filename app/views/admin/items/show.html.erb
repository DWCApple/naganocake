  <h3>商品詳細</h3>

  <div class="container">
    <div class="row">

      <div class="col-4">
        <%= image_tag @item.get_image, size: "200x150" %>
      </div>

        <div class="col-8">
          <table>
            <tbody>

              <tr>
                <th>商品名</th>
                  <td><%= @item.name %></td>
              </tr>

              <tr>
                <th>商品説明</th>
                  <td><%= @item.description %></td>
              </tr>

              <tr>
                <th>ジャンル</th>
                  <td><%= @item.genre.name %></td>
              </tr>

              <tr>
                <th>
                  <p>税込価格</p>
                  <p>(税抜価格）</p>
                </th>
                  <td><%= number_to_currency(@item.price) %></td>
              </tr>

              <tr>
                <th>販売ステータス</th>
                  <td><% if @item.is_active == true %>
                    <strong class="text-success">販売中</strong>
                      <% else %>
                    <strong class="text-black-50">販売停止中</strong>
                      <% end %>
                  </td>
              </tr>
              <tr>
                  <td><%= link_to '編集する', edit_admin_item_path(@item.id), class: "btn btn-lg btn-success mt-5" %></td>
              </tr>
            </tbody>
          </table>
        </div>
    </div>
  </div>
<table>
  <thead>
    <h3>商品詳細</h3>
  </thead>

    <tbody>
      <tr>
        <th>商品名</th>
         <td><%= @item.name %></td>
      </tr>

      <tr>
        <th>商品説明</th>
         <td><%= @item.description %></td>
      </tr>

      <tr>
        <th>ジャンル</th>
         <td><%= @item.genre.name %></td>
      </tr>

      <tr>
        <th>
          税込価格
          (税抜価格）
        </th>
         <td><%= @item.price %></td>
      </tr>

      <tr>
        <th>販売ステータス</th>
          <td><% if @item.is_active == true %>
              <%= "販売中" %>
            <% else %>
              <%= "販売停止中" %>
            <% end %>
          </td>
      </tr>
      <th><%= link_to '編集する', edit_admin_item_path(@item.id) %></th>
    </tbody>
</table>
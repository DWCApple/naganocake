  <div class="container">
    <div class="row mt-5">
      <div class="col-2 text-right">
        <h3 class="bg-light">
          <strong>
            商品詳細
          </strong>
        </h3>
      </div>
    </div>

    <div class="row mt-5">
      <div class="col-4">
        <%= image_tag @item.get_image, size: "350x250" %>
      </div>

        <div class="col-8">
          <table>
            <tbody>

              <tr>
                <th>
                  <p>商品名</p>
                </th>

                <td>
                  <p><%= @item.name %></p>
                </td>
              </tr>

              <tr>
                <th>
                  <P>商品説明</P>
                </th>

                <td>
                  <p><%= @item.description %></P>
                </td>
              </tr>

              <tr>
                <th>
                  <p>ジャンル</P>
                </th>

                  <td>
                    <p><%= @item.genre.name %></P>
                  </td>
              </tr>

              <tr>
                <th>
                  <p>税込価格<br>
                  (税抜価格)
                  </p>
                </th>

                  <td>
                    <p>
                      <%= number_to_currency(@item.add_tax_price) %>
                      (<%= number_to_currency(@item.price) %>)
                    </p>
                  </td>
              </tr>

              <tr>
                <th>
                  <p>販売ステータス</P>
                </th>

                  <td><% if @item.is_active == true %>
                    <p>
                      <strong class="text-success ml-4">販売中</strong>
                    </P>
                      <% else %>
                    <p>
                      <strong class="text-black-50 ml-4">販売停止中</strong>
                    </P>
                      <% end %>
                  </td>
              </tr>

              <tr>
                  <td><%= link_to '編集する', edit_admin_item_path(@item.id), class: "btn btn-lg btn-success mt-5" %></td>
              </tr>
            </tbody>
          </table>
        </div>
    </div>
  </div>


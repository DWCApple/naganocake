  <div class="container">
    <div class="row mt-5">
      <div class="col-4 text-right">
        <h3 class="bg-light">
          <strong>
            商品編集
          </strong>
        </h3>
      </div>
    </div>

      <%= form_with model: @item, url: admin_item_path(@item.id) do |f| %>

        <div class="col-6">
          <div class="form-group row">
            <%= f.label :商品画像 , class: "col-4"%>
            <%= f.file_field :image , class: "col-8"%>
          </div>

          <div class="form-group row">
            <%= f.label :商品名 , class: "col-4"%>
            <%= f.text_field :name , class: "col-8"%>
          </div>

          <div class="form-group row">
            <%= f.label :商品説明, class: "col-4" %>
            <%= f.text_area :description, class: "form-control col-8" %>
          </div>

          <div class="form-group row">
            <%= f.label :ジャンル , class: "col-4"%>
            <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name, @item.genre_id) %>
          </div>

          <div class="form-group row">
            <%= f.label :税抜き価格 , class: "col-4"%>
            <%= f.text_field :price, class: "col-8" %>
          </div>

          <div class="form-group row">
            <%= f.label :販売ステータス , class: "col-4"%>
              <%= f.radio_button :is_active, "true" %>
              <%= f.label :is_active, "販売中", class: "col-3" %>
              <%= f.radio_button :is_active, "false" %>
              <%= f.label :is_active, "販売停止中", class: "col-3" %>
          </div>

          <div class="form-group row">
              <%= f.submit '変更を保存', class: "btn btn-lg btn-success" %>
          </div>
        </div>
      <% end %>
  </div>
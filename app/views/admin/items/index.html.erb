
<table>
  <thead>
    <h3>商品一覧</h3>
  </thead>
    <tbody class = "table">

      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜き価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>

      <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= link_to item.name, admin_item_path(item.id), class: "text-dark" %></td>
        <td><%= number_to_currency(item.price) %></td>
        <td><%= item.genre.name %></td>
        <td>
            <% if item.is_active == true %>
              <span class="text-success">販売中</span>
            <% else %>
              <%= "販売停止中" %>
            <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
</table>
<%= paginate @items %>

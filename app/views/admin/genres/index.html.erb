<table>
  <h3>ジャンル一覧・追加</h3>
    <!--  form_for(@genre, url: admin_genres_path) do |f| -->
    <tr>
      <%= form_with model: @genre, url: admin_genres_path do |f| %>
        <td>ジャンル名</td>
        <td><%= f.text_field :name, class: "ml-5" %></td>
        <td><%= f.submit '新規投録', class: "btn btn-sm btn-success ml-5" %></td>
      <% end %>
    </tr>
  <tbody class = "table">
    <th>ジャンル</th>
    <% @genres.each do |genre| %>
    <tr>
    <td><%= genre.name %></td>
    <td class="text-right"><%= link_to '編集する', edit_admin_genre_path(genre.id), class: "btn btn-sm btn-success" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
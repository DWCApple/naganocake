<div class="container">
  <div class="row">
    <h2 class="bg-light">注文履歴詳細</h2>
  </div>
  <table class="table text-left">
  <tr>
    <th>購入者</th>
    <td><%= @order.end_user.name %></td>
  </tr>
  <tr>
    <th>注文日</th>
    <td><%= @order.create_at %></td>
  </tr>
  <tr>
    <th>配送先</th>
    <td><%= @order.postal_code %> <%= @order.address %> <%= @order.name %></td>
  </tr>
  <tr>
    <th>支払方法</th>
    <td><%= @order.method_of_payment %></td>
  </tr>
  <tr>
    <th>注文ステータス</th>
    <td><% status_eg = Order.status_methods.key(@order.status) %>
        <%= Order.status_methods_i18n [status_eg] %>
    </td>
    <% end %>
  </tr>

<div class="container">
  <div class="row mb-3">
  </div>
  <table class="table"> 
  <thead class="bg-light">
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th>制作ステータス</th>
    </tr>
    <tbody>
      <% @end_users.each do |end_user| %>
      <tr>
        <td><%= end_user.id %></td>
        <td class="text-black">
          <%= link_to admin_end_user_path(end_user.id) do %>
          <%= end_user.family_name %><%= end_user.first_name %>
          <% end %>  
        </td>
        <td><%= end_user.email %></td>
        <td>
          <% if end_user.is_deleted == false %>
            <strong class="text-success"><%= "有効" %></strong>
          <% else %>
            <strong class="text-secondary"><%= "退会" %></strong>
          <% end %>
          </td>
      </tr>
      <% end %>
    </tbody>
</table>
</div>
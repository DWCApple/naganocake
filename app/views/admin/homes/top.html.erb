<div class="container">
  <div class="row mb-3">
    <h2>
      <strong>
        注文履歴一覧
      </strong>
    </h2>
  </div>
  <table class="table">
  <thead class="bg-light">
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
    <tbody>
      <% @orders.each do |order| %>
      <tr>
        <td class="text-black">
          <%= link_to admin_order_path(order.id) do %>
          <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
          <% end %>
        </td>
        <td><%= order.end_user.first_name %><%= order.end_user.family_name %></td>
        <td><% total = 0 %>
          <% order.order_items.each do |order_item| %>
            <% total = total + order_item.quantity %>
          <% end %>
          <%= total %>
        </td>
        <td>
          <%= order.status_i18n %>
        </td>

      </tr>
      <% end %>
    </tbody>
</table>
</div>



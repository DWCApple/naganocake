<div class="container">
  <div class="row mb-3">
    <h2>
      <strong>
        注文履歴一覧
      </strong>
    </h2>
  </div>
  <table class="table">
  <thead class="bg-light">
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
    <tbody>
      <% @orders.each do |orders| %>
      <tr>
        <td class="text-black">
          <%= link_to admin_order_path(order.id) do %>
          <%= orders.created_at%>
          <% end %>
        </td>
        <td><%= orders.end_user.first_name %><%= order.end_user.family_name %></td>
        <td><%= orders.order_items.quantity %></td>
        <td>
          <% if orders.status == production_status_method(1) %>
        </td>
      </tr>
      <% end %>
    </tbody>
</table>
</div>

<%= paginate @end_users %>

<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<div class="container">
    <header>
      <!-- Just an image -->
<nav class="navbar navbar-expand-lg navbar-light" style="background-color: #e3f2fd;">
  <a class="navbar-brand p-3" href="#">
    <%= link_to image_tag("naganocake.jpg", size: '80x80'), root_path %>
  </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>


         <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <% if end_user_signed_in? %>
            <li class="nav-item m-3">
              <%= link_to "マイページ", end_users_path, class: 'nav-link text-dark btn btn-outline-secondary' %>
            </li>
            <li class="nav-item m-3">
              <%= link_to "商品一覧", items_path, class: 'nav-link text-dark btn btn-outline-secondary' %>
            </li>
            <li class="nav-item m-3">
              <%= link_to "カート", cart_items_path, class: 'nav-link text-dark btn btn-outline-secondary' %>
            </li>
            <li class="nav-item m-3">
              <%= link_to "ログアウト", destroy_end_user_session_path, method: :delete, class: 'nav-link text-dark btn btn-outline-secondary' %>
            </li>
          <% elsif admin_signed_in? %>
        <li class="nav-item m-3">
          <%= link_to '商品一覧', admin_items_path, class: 'nav-link text-dark btn btn-outline-secondary' %>
            </li>
            <li class="nav-item m-3">
              <%= link_to '会員一覧', admin_items_path, class: 'nav-link text-dark btn btn-outline-secondary' %>
            </li>
            <li class="nav-item m-3">
              <%= link_to '注文履歴一覧', admin_items_path, class: 'nav-link text-dark btn btn-outline-secondary' %>
            </li>
            <li class="nav-item m-3">
              <%= link_to 'ジャンル一覧', admin_genres_path, class: 'nav-link text-dark btn btn-outline-secondary' %>
            </li>
            <li class="nav-item m-3">
              <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class: 'nav-link text-dark btn btn-outline-secondary' %>
            </li>
        <% else %>
            <li class="nav-item m-3">
              <%= link_to "About", about_path, class: 'nav-link text-dark btn btn-outline-secondary' %>
            </li>
            <li class="nav-item m-3">
              <%= link_to "商品一覧", items_path, class: 'nav-link text-dark btn btn-outline-secondary' %>
            </li>
            <li class="nav-item m-3">
              <%= link_to "新規登録", new_end_user_registration_path, class: 'nav-link text-dark btn btn-outline-secondary' %>
            </li>
            <li class="nav-item m-3">
              <%= link_to "ログイン", new_end_user_session_path, class: 'nav-link text-dark btn btn-outline-secondary' %>
            </li>
        <% end %>
        </ul>
</nav>
      </header>
  </div>



  <body>
     <main>
      <p id="notice"><%= notice %></p>
        <%= yield %>
    </main>
  </body>

</html>

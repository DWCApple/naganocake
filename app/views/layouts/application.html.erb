<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

    <header>
      <%= link_to "LOGO", root_path %>

            <% if end_user_signed_in? %>
              <button type="button" class="btn btn-light"><%= link_to "マイページ", end_users_path %></button>
              <button type="button" class="btn btn-light"><%= link_to "商品一覧", items_path %></button>
              <button type="button" class="btn btn-light"><%= link_to "カート" %></button>
              <button type="button" class="btn btn-light"><%= link_to "ログアウト", destroy_end_user_session_path, method: :delete %></button>

            <% elsif admin_signed_in? %>
              <button type="button" class="btn btn-light"><%= link_to '商品一覧', admin_items_path %></button>
              <button type="button" class="btn btn-light"><%= link_to '会員一覧', admin_end_users_path %></button>
              <button type="button" class="btn btn-light"><%= link_to '注文履歴一覧', admin_items_path %></button>
              <button type="button" class="btn btn-light"><%= link_to 'ジャンル一覧', admin_genres_path %></button>
              <button type="button" class="btn btn-light"><%= link_to 'ログアウト', admin_items_path %></button>

            <% else %>
              <button type="button" class="btn btn-light"><%= link_to "About", about_path %></button>
              <button type="button" class="btn btn-light"><%= link_to "商品一覧", items_path %></button>
              <button type="button" class="btn btn-light"><%= link_to "新規登録", new_end_user_registration_path %></button>
              <button type="button" class="btn btn-light"><%= link_to "ログイン", new_end_user_session_path %></button>
            <% end %>

    </header>

            <body>
              <%= yield %>
            </body>
</html>

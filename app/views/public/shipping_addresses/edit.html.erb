<%= render 'layouts/error_messages', obj: @shipping_address %>

    <div class="row mt-3 ml-5 mb-5 text-right">
        <div class="col-3">
            <h3>
                <strong class="bg-light">
                    配送先編集
                </strong>
            </h3>
        </div>
    </div>

<%= form_with model: @shipping_address, method: :patch do |f| %>

   <div class = "container">
        <div class = "form-group row">
            <div>
                <%= f.label :postal_code, '郵便番号(ハイフンなし)' %>
                <%= f.text_field :postal_code, class: "ml-2" %>
            </div>
        </div>

        <div class = "form-group row">
            <div>
                <%= f.label :address, '住所' %>
                <%= f.text_field :address, :size => 40, class: "ml-2" %>
            </div>
        </div>

        <div class = "form-group row">
            <div>
                <%= f.label :name, '宛名' %>
                <%= f.text_field :name, class: "ml-2" %>

                <%= f.submit '変更内容を保存', class: 'btn btn-sm btn-success ml-5' %>
            </div>
    </div>
<% end %>
<h1>配送先登録/一覧</h1>

<%= form_with model: @new_address do |f| %>
    <div>
        <%= f.label :postal_code, '郵便番号(ハイフンなし)' %>
        <%= f.text_field :postal_code %>
    </div>

    <div>
        <%= f.label :address, '住所' %>
        <%= f.text_field :address %>
    </div>

    <div>
        <%= f.label :name, '宛名' %>
        <%= f.text_field :name %>

        <%= f.submit '新規登録', class: 'btn btn-success' %>
    </div>
<% end %>


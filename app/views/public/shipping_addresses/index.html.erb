<%= render 'layouts/error_messages', obj: @new_address %>

  <div class="row mt-3 ml-5 mb-5 text-right">
    <div class="col-3">
        <h3>
            <strong class="bg-light">
                配送先登録/一覧
            </strong>
        </h3>
    </div>
  </div>

<%= form_with model: @new_address do |f| %>
<div class = "container">

        <div class = "form-group row">
            <div>
                <%= f.label :postal_code, '郵便番号(ハイフンなし)' %>
                <%= f.text_field :postal_code, class: "ml-2" %>
            </div>
        </div>

        <div class = "form-group row">
            <div>
                <%= f.label :address, '住所' %>
                <%= f.text_field :address, :size => 40, class: "ml-2" %>
            </div>
        </div>

        <div class = "form-group row">
            <div>
                <%= f.label :name, '宛名' %>
                <%= f.text_field :name, class: "ml-2" %>

                <%= f.submit '新規登録', class: 'btn btn-sm btn-success ml-5' %>
            </div>
        </div>
        <% end %>

    <table border="1" class = "mt-5">
        <thead class = 'bg-light'>
            <tr>
                <th>郵便番号</th>
                <th>住所</th>
                <th>宛名</th>
                <th colspan="3"></th>
            </tr>
        </thead>
        <tbody>
            <% @shipping_addresses.each do |shipping_address| %>
            <tr>
                <th><%= shipping_address.postal_code %></th>
                <th><%= shipping_address.address %></th>
                <th><%= shipping_address.name %></th>
                <th>
                    <%= link_to "編集する", edit_shipping_address_path(shipping_address.id), class: 'btn btn-sm btn-success m-2'  %>
                    <%= link_to "削除する", shipping_address_path(shipping_address.id), method: :delete, class: 'btn btn-sm btn-danger m-2'  %>
                </th>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>
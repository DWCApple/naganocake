<h1>配送先登録/一覧</h1>

<%= form_with model: @new_address do |f| %>
    <div>
        <%= f.label :postal_code, '郵便番号(ハイフンなし)' %>
        <%= f.text_field :postal_code %>
    </div>

    <div>
        <%= f.label :address, '住所' %>
        <%= f.text_field :address %>
    </div>

    <div>
        <%= f.label :name, '宛名' %>
        <%= f.text_field :name %>

        <%= f.submit '新規登録', class: 'btn btn-success' %>
    </div>
<% end %>
<table border="1">
    <thead>
        <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        <% @shipping_addresses.each do |shipping_address| %>
        <tr>
            <th><%= shipping_address.postal_code %></th>
            <th><%= shipping_address.address %></th>
            <th><%= shipping_address.name %></th>
            <th>
                <%= link_to "編集する", edit_shipping_address_path(shipping_address.id)  %>
                <%= link_to "削除する", shipping_addresses_path(shipping_address.id), method: :delete %>
            </th>
        </tr>
        <% end %>
    </tbody>
</table>